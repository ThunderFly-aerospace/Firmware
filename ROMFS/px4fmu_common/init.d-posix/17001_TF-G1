#!nsh
#
# @name ThunderFly G1
#
# @type AutoGyro
# @class Autogyro
#
# @output MAIN1 ruddle_left
# @output MAIN2 ruddle_right
# @output MAIN3 rotor_left 
# @output MAIN4 rotor_right
# @output MAIN5 throttle
# @output MAIN6 rotor_motor
#
# @maintainer ThunderFly
#


# Use normal config, the extra overrides for SITL are below
sh /etc/init.d/airframes/17001_TF-G1

# Parameter SITL overrides
if [ $AUTOCNF = yes ]
then

	param set COM_DISARM_LAND -1.0

	# Prevent RC signal lost when simulation lagging
	param set COM_RC_LOSS_T 10
	param set NAV_RCL_ACT 4

	# Loose preflight check conditions
	param set COM_ARM_IMU_ACC 1.0
	param set COM_ARM_EKF_AB 0.01

	# Use [2] if joystick is present to simulate RC
	param set COM_RC_IN_MODE 1

fi

set MIXER TF-G1
set MIXER_FILE etc/mixers-sitl/TF-G1.main.mix

#set PWM_RATE 50
#set PWM_AUX_RATE 50
#set PWM_OUT 12345678

